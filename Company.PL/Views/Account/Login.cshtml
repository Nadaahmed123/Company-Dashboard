@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form asp-controller="Account" asp-action="Login" method="post">
            <input class="text email" type="email" asp-for="Email" placeholder="Email" required>
            <span class="text-danger" asp-validation-for="Email"></span>
            <input class="text" type="password" asp-for="Password" placeholder="Password" required>
            <span class="text-danger" asp-validation-for="Password"></span>

            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" class="checkbox" asp-for="RememberMe">
                    <span>Remember Me</span>
                </label>
                <div class="clear"></div>
            </div>
            <input type="submit" value="SIGNIN">
        </form>
        <p>Don't have an Account? <a asp-action="SignUp">Register Now!</a></p>
         <p>
            <a asp-action="ForgetPassword" asp-controller="Account">Forgot Password?</a>
        </p>
    </div>
    <div class="col-6 mt-3">
       
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
