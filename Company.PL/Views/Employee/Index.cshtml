@model IEnumerable<EmployeeViewModel>
@{

    ViewData["Title"] = "Index";
}

<h1 >  All Employees</h1>
<br />
<br />

 
<a asp-controller="Employee" asp-action="Create" class="btn btn-success " > Add New Employee </a>
<br />
<br />

<form class="my-3" asp-action="Index" asp-controller="Employee">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Name..." name="SearchValue" class="form-control"/>

        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-block" />
        </div>

    </div>
</form>

@if (Model.Count() > 0)
{
   

    <table class="table table-hover mt-3" style="margin-left: -100px;">
    <thead>
        <tr>

            <th scope="col">@Html.DisplayNameFor( M=>M.Name)</th>
            <th scope="col">@Html.DisplayNameFor(M=>M.Image)</th>
            <th scope="col">@Html.DisplayNameFor( M=>M.Age)</th>
            <th scope="col">@Html.DisplayNameFor( M=>M.Address)</th>
            <th scope="col">@Html.DisplayNameFor( M=>M.Salary)</th>
            <th scope="col">@Html.DisplayNameFor( M=>M.Email)</th>
            <th scope="col">@Html.DisplayNameFor( M=>M.isActive)</th>
            <th scope="col">@Html.DisplayNameFor(M => M.HireDate)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
            
        @foreach(var Employee in Model)
        {
            <tr>
                
                <td>@Employee.Name</td>
                  <td>
                        <img src="~/Files/Images/@Employee.ImageUrl" class="img-circle" width="40" alt="Employee Image"/>
                </td>
                <td>@Employee.Age</td>
                <td>@Employee.Address</td>
                <td>@Employee.Salary</td>
                <td>@Employee.Email</td>
                <td>@Employee.HireDate</td>
                 <td>@Employee.isActive</td>
               

              
               </tr>
}
        
    </tbody>
</table>

}
else{
    <div class="mt-4 alert alert-warning">
        <h2>Employee not Found</h2>
    </div>
}