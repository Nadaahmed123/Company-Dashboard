@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />

<a asp-controller="Employee" asp-action="Create" class="btn btn-success">Add New Employee</a>
<br />
<br />

<form class="my-3" asp-action="Index" asp-controller="Employee">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Name..." name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-block" />
        </div>
    </div>
</form>

@if (Model?.Count() >0)
{
    <table class="table table-hover mt-3" style="margin-left: -100px;">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Image</th>
                <th scope="col">Age</th>
                <th scope="col">Address</th>
                <th scope="col">Salary</th>
                <th scope="col">Email</th>
                <th scope="col">Hire Date</th>
                <th scope="col">Active</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>
                        <img src="~/Files/Images/@employee.ImageUrl" class="img-circle" width="40" alt="Employee Image" />
                    </td>
                    <td>@employee.Age</td>
                    <td>@employee.Address</td>
                    <td>@employee.Salary</td>
                    <td>@employee.Email</td>
                    <td>@employee.HireDate</td>
                    <td>@employee.isActive</td>
                    <td><a href="#">Details</a></td>
                    <td><a href="#">Update</a></td>
                    <td><a href="#">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h2>No employees found</h2>
    </div>
}
