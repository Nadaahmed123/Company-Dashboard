@model EmployeeViewModel
@{
    ViewData["Title"] = "Create";
    var Departments = new SelectList(ViewBag.Departments, "Id", "Name");
}

<div class="row">
    <div class="col-6">
        <form asp-action="Create" asp-controller="Employee" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="@Model.Name" class="control-label"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Age" class="control-label"></label>
                <input asp-for="@Model.Age" class="form-control" />
                <span asp-validation-for="@Model.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Address" class="control-label"></label>
                <input asp-for="@Model.Address" class="form-control" />
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.HireDate" class="control-label"></label>
                <input asp-for="@Model.HireDate" class="form-control" />
                <span asp-validation-for="@Model.HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Salary" class="control-label"></label>
                <input asp-for="@Model.Salary" class="form-control" />
                <span asp-validation-for="@Model.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="col-form-label" asp-for="@Model.Image"></label>
                <input type="file" class="form-control" asp-for="@Model.Image" style="box-shadow: none;" />
                <span asp-validation-for="@Model.Image" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="@Model.isActive" type="checkbox" class="form-check-input" />
                <label asp-for="@Model.isActive" class="form-check-label"></label>
            </div>
            <div class="form-group form-check">
                <label asp-for="@Model.DepartmentId" class="form-check-label"></label>
                <select asp-for="@Model.DepartmentId" asp-items="Departments" class="form-control">
                    <option value="">-- Select Department --</option>
                </select>
                <span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
